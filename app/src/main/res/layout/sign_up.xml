<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sign_up"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Sign Up"
            android:textStyle="bold"
            android:textColor="#0000FF"
            android:textSize="33sp"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Please Regnetration with email sign up to continue ussing our app."
            android:textSize="19sp"
            android:textColor="#000000"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Enter vis Social Networks"
            android:textStyle="bold"
            android:textColor="#0000FF"
            android:textSize="19sp"
            android:layout_marginLeft="30dp"
            android:gravity="center"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <Button
            android:layout_marginLeft="100dp"
            android:paddingLeft="27dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/customer_bt"
            android:drawableLeft="@drawable/fb"
            />
        <Button
            android:layout_marginLeft="30dp"
            android:paddingLeft="27dp"

            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/customer_bt"
            android:drawableLeft="@drawable/email"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="or login with email"
            android:textColor="#000000"

            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            />
        <EditText
            android:layout_marginLeft="30dp"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:hint="Username"
            android:inputType="textEmailAddress">

        </EditText>
        <EditText
            android:layout_marginLeft="30dp"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:hint="Password"
            android:inputType="textPassword"
            >

        </EditText>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <CheckBox
            android:layout_marginLeft="30dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            />
        <TextView
            android:layout_marginLeft="15dp"

            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="I agree with privacy polily"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#4B088A"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <Button
            android:id="@+id/bt_signup"
            android:layout_marginLeft="30dp"
            android:layout_width="340dp"
            android:layout_height="55dp"
            android:text="Sign up"
            android:textStyle="bold"
            android:paddingBottom="9dp"
            android:background="@drawable/custumer_bt1"

            android:textColor="#FFFFFF"
            android:textSize="20sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        >
        <TextView
            android:layout_marginLeft="30dp"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:text="You already have an account?"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/login"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Login"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#4B088A"/>

    </LinearLayout>


</LinearLayout>