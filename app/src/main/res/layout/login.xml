<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sign_up"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Login Now"
            android:textStyle="bold"
            android:textColor="#4B088A"
            android:textSize="33sp"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Please login to continue usign out app."
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Enter vis Social Networks"
            android:textStyle="bold"
            android:textColor="#4B088A"
            android:textSize="19sp"
            android:layout_marginLeft="30dp"
            android:gravity="center"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <Button
            android:layout_marginLeft="100dp"
            android:paddingLeft="27dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/customer_bt"
            android:drawableLeft="@drawable/fb"
            />
        <Button
            android:layout_marginLeft="30dp"
            android:paddingLeft="27dp"

            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/customer_bt"
            android:drawableLeft="@drawable/email"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingTop="15dp"
            android:text="or login with email"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            />
        <EditText
            android:layout_marginLeft="30dp"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:hint="Username"
            android:inputType="textEmailAddress">

        </EditText>
        <EditText
            android:layout_marginLeft="30dp"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:hint="Password"
            android:inputType="textPassword"
            >

        </EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:textColor="#FF0000"
           android:textStyle="bold"
            android:text="Forgot Password?"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <Button
            android:id="@+id/bt_login"
            android:layout_marginLeft="30dp"
            android:layout_width="340dp"
            android:layout_height="55dp"
            android:text="Login"
            android:textStyle="bold"
            android:paddingBottom="9dp"
            android:background="@drawable/custumer_bt1"

            android:textColor="#FFFFFF"
            android:textSize="20sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        >
        <TextView
            android:layout_marginLeft="30dp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Don't have an account?"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/signup"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Sign up"
            android:textSize="18sp"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:textColor="#4B088A"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="35dp"
            android:paddingLeft="27dp"
            android:background="@drawable/customer_bt"
            android:drawableLeft="@drawable/back">

        </Button>

    </LinearLayout>

</LinearLayout>